<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <referenceContainer name="hyva.checkout.api-v1.after">
            <block name="checkout.payment.method.stripe_payments.script"
                   as="stripe_payments"
                   template="Hyva_CheckoutStripe::component/payment/method/stripe_payments_script.phtml"
                   after="hyva.checkout.main"
            >
                <arguments>
                    <argument name="magewire" xsi:type="object">
                        Hyva\CheckoutStripe\Magewire\Payment\Method\StripePayments
                    </argument>
                </arguments>
            </block>

            <block name="checkout.payment.method.stripe.checkout-express-button"
                   template="Hyva_CheckoutStripe::component/payment/checkout-express-button.phtml"
                   class="StripeIntegration\Payments\Block\Button"
            >
                <arguments>
                    <argument name="magewire" xsi:type="object">
                        Hyva\CheckoutStripe\Magewire\View\PaymentRequestButtonCheckout
                    </argument>
                </arguments>
            </block>

            <block name="checkout.payment.method.stripe.element-after"
                   template="Hyva_CheckoutStripe::component/payment/stripe-payments-element-after.phtml"
            />
        </referenceContainer>
    </body>
</page>
