<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <head>
        <script src="Hyva_CheckoutStripe::js/load-stripe.js"></script>
    </head>

    <body>
        <referenceContainer name="before.body.end">
            <block class="StripeIntegration\Payments\Block\Minicart\Shortcut"
                   name="stripe-payments.minicart.shortcut"
                   before="magewire.livewire"
                   ifconfig="payment/stripe_payments_express/global_enabled"
            >
                <arguments>
                    <argument name="magewire" xsi:type="object">Hyva\CheckoutStripe\Magewire\View\PaymentRequestButtonMinicart</argument>
                </arguments>

                <action method="setData">
                    <argument name="key" xsi:type="string">is_cart</argument>
                    <argument name="value" xsi:type="boolean">true</argument>
                </action>

                <action method="setIsShoppingCart">
                    <argument name="isShoppingCart" xsi:type="boolean">false</argument>
                </action>

                <action method="setIsInCatalogProduct">
                    <argument name="isCatalog" xsi:type="boolean">true</argument>
                </action>
            </block>
        </referenceContainer>

        <referenceBlock name="extra_actions">
            <block class="Magento\Framework\View\Element\Template"
                   name="stripe-payments.cart-drawer.element"
                   template="Hyva_CheckoutStripe::component/cart-drawer-element.phtml"
                   ifconfig="payment/stripe_payments_express/global_enabled">
                <block name="stripe-minicart-loader" template="Hyva_Theme::ui/loading.phtml"/>
            </block>
        </referenceBlock>
    </body>
</page>
