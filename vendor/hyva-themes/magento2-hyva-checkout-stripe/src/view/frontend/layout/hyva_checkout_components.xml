<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <referenceBlock name="checkout.payment.methods">
            <block name="checkout.payment.method.stripe_payments"
                   as="stripe_payments"
                   template="Hyva_CheckoutStripe::component/payment/method/stripe_payments_element.phtml">
                <arguments>
                    <argument name="methodCode" xsi:type="string">stripe_payments</argument>
                </arguments>
            </block>

            <block name="checkout.payment.method.stripe_payments_bank_transfers"
                   as="stripe_payments_bank_transfers"
                   template="Hyva_CheckoutStripe::component/payment/method/stripe_payments_element.phtml">
                <arguments>
                    <argument name="methodCode" xsi:type="string">stripe_payments_bank_transfers</argument>
                </arguments>
            </block>
        </referenceBlock>

        <referenceContainer name="checkout.payment.section">
            <block name="checkout.payment.method.stripe.express-button"
                   template="Hyva_CheckoutStripe::component/payment/method/stripe_express_button.phtml"
                   before="checkout.payment.methods"
            />
        </referenceContainer>
    </body>
</page>
