<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd"
>
    <group id="payment"
           showInDefault="1"
           showInStore="1"
           showInWebsite="1"
           translate="label"
    >
        <label>Payment</label>

        <field id="show_method_icons"
               translate="label comment"
               type="select"
               sortOrder="10"
               showInDefault="1"
               showInWebsite="1"
               showInStore="1"
        >
            <label>Display method icons</label>
            <comment>Display an icon for each payment method based on its existence.</comment>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
        </field>
        <field id="remove_non_zero_methods"
               translate="label comment"
               type="select"
               sortOrder="20"
               showInDefault="1"
               showInWebsite="1"
               showInStore="1">
            <label>Remove Non-Zero Payment Methods</label>
            <comment>Removes all but a subset of payment methods when no payment is required.</comment>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
        </field>
        <field id="enabled_non_zero_methods"
               translate="label"
               type="multiselect"
               sortOrder="30"
               showInDefault="1"
               showInWebsite="1"
               showInStore="1">
            <label>Payment Methods to Show for Zero Subtotal Checkout</label>
            <source_model>Hyva\Checkout\Model\Config\Source\PaymentMethods</source_model>
            <validate>required-entry</validate>
            <depends>
                <field id="hyva_themes_checkout/component/payment/remove_non_zero_methods">1</field>
            </depends>
        </field>
    </group>
</include>
