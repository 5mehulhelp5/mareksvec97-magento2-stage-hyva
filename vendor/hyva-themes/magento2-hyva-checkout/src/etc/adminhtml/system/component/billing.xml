<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd"
>
    <group id="billing"
           showInDefault="1"
           showInStore="1"
           showInWebsite="1"
           translate="label"
    >
        <label>Billing</label>

        <field id="shipping_as_billing"
               translate="label comment"
               type="select"
               sortOrder="10"
               showInDefault="1"
               showInWebsite="1"
               showInStore="1"
        >
            <label>Shipping- as Billing Address</label>
            <comment>Apply the customers shipping- as the billing address by default.</comment>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
        </field>

        <field id="address_list_view"
               translate="label comment"
               type="select"
               sortOrder="10"
               showInDefault="1"
               showInWebsite="1"
               showInStore="1"
        >
            <label>Address list view</label>
            <comment>Only for non-guest users.</comment>
            <source_model>Hyva\Checkout\Model\Config\Source\AddressRendererType</source_model>
        </field>
    </group>
</include>
