<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd"
>
    <!-- @OSC-MAP: onestepcheckout_iosc/comments -->
    <!-- @TO: hyva_themes_checkout/component/order_comment -->
    <group id="order_comment"
           translate="label"
           showInDefault="1"
           showInWebsite="1"
           showInStore="1"
    >
        <label>Order Comment</label>

        <!-- @OSC-MAP: onestepcheckout_iosc/comments/enable -->
        <!-- @TO: hyva_themes_checkout/component/order_comment/enable -->
        <field id="enable"
               translate="label"
               type="select"
               sortOrder="10"
               showInDefault="1"
               showInWebsite="1"
               showInStore="1"
        >
            <label>Enable</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
        </field>

        <field id="placeholder"
               translate="label comment"
               type="text"
               sortOrder="20"
               showInDefault="1"
               showInWebsite="1"
               showInStore="1"
        >
            <label>Placeholder</label>
            <comment>The text will be displayed within the textarea, serving as an example or description to guide customers on what they can optionally write.</comment>
            <depends>
                <field id="hyva_themes_checkout/component/order_comment/enable">1</field>
            </depends>
        </field>
    </group>
</include>
