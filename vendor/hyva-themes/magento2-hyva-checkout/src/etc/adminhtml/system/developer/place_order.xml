<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd"
>
    <group id="place_order"
           showInDefault="1"
           showInStore="1"
           showInWebsite="1"
           sortOrder="50"
           translate="label"
    >
        <label>Place Order</label>

        <field id="success_page_redirect_timeout"
               showInDefault="1"
               showInStore="1"
               showInWebsite="1"
               sortOrder="10"
               translate="label comment"
               type="text"
        >
            <label>Success Page Redirect Timeout</label>
            <comment>The time in milliseconds the customer must wait before being redirected to the success page after an order is successfully processed. (default: 3000).</comment>
            <validate>validate-number required-entry validate-zero-or-greater</validate>
        </field>
    </group>
</include>
