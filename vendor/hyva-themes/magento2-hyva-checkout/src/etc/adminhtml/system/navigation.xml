<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd"
>
    <group id="navigation"
           showInDefault="1"
           showInStore="1"
           showInWebsite="1"
           sortOrder="40"
    >
        <label>Navigation</label>

        <field id="show_back_button"
               showInDefault="1"
               showInStore="1"
               showInWebsite="1"
               sortOrder="20"
               translate="label"
               type="select"
               canRestore="1"
        >
            <label>Show Back Button</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
        </field>

        <field id="show_back_to_cart_button"
               showInDefault="1"
               showInStore="1"
               showInWebsite="1"
               sortOrder="20"
               translate="label"
               type="select"
               canRestore="1"
        >
            <label>Show Back to Cart Button</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <depends>
                <field id="hyva_themes_checkout/breadcrumbs/show_back_button">1</field>
            </depends>
        </field>
    </group>
</include>
