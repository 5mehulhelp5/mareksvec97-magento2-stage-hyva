<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd"
>
    <group id="order_summary"
           translate="label"
           sortOrder="60"
           showInDefault="1"
           showInWebsite="1"
           showInStore="1"
    >
        <label>Order Summary</label>

        <group id="cart_items"
               translate="label"
               sortOrder="50"
               showInDefault="1"
               showInWebsite="1"
               showInStore="1"
        >
            <label>Cart Items</label>

            <field id="unfold"
                   translate="label comment"
                   type="select"
                   sortOrder="10"
                   showInDefault="1"
                   showInWebsite="1"
                   showInStore="1"
                   canRestore="1"
            >
                <label>Unfold</label>
                <comment>Expand the shopping cart items when loading the checkout.</comment>
                <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            </field>

            <field id="limit"
                   translate="label comment"
                   type="text"
                   sortOrder="20"
                   showInDefault="1"
                   showInWebsite="1"
                   showInStore="1"
                   canRestore="1"
            >
                <depends>
                    <field id="hyva_themes_checkout/order_summary/cart_items/unfold">1</field>
                </depends>
                <label>Limit</label>
                <comment>Only unfold the cart items if the amount of cart items is within limits.</comment>
                <validate>validate-digits validate-not-negative-number</validate>
            </field>
        </group>
    </group>
</include>
