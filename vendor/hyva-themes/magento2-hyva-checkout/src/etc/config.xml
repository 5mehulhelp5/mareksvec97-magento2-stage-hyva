                <discount_code>
                    <enable>1</enable>
                </discount_code>

                <order_comment>
                    <enable>1</enable>
                </order_comment>

                <newsletter_subscription>
                    <enable>1</enable>
                </newsletter_subscription>

                <payment>
                    <show_method_icons>1</show_method_icons>
                    <remove_non_zero_methods>0</remove_non_zero_methods>
                    <enabled_non_zero_methods>free</enabled_non_zero_methods>
                </payment>

                <guest_details>
                    <email_address_tooltip>We'll send your order confirmation here.</email_address_tooltip>
                    <enable_login>0</enable_login>
                </guest_details>
            </component>

            <address_form>
                <street>
                    <field_label_0>Street Address</field_label_0>
                </street>
            </address_form>

            <design>
                <shipping_payment_methods>
                    <universal_icon_width>44</universal_icon_width>
                    <universal_icon_height>32</universal_icon_height>
                    <combine_shipping_method_name>0</combine_shipping_method_name>
                </shipping_payment_methods>

                <form_fields>
                    <show_password_visibility_toggle>1</show_password_visibility_toggle>
                    <tooltip_style>hint_text</tooltip_style>
                </form_fields>

                <formatting>
                    <show_zero_price_free_label>0</show_zero_price_free_label>
                    <show_shipping_method_total_if_none_selected>1</show_shipping_method_total_if_none_selected>
                </formatting>
            </design>

            <developer>
                <mobile_useragent_regex>
                    <![CDATA[/android|avantgo|blackberry|bolt|boost|cricket|docomo|fone|hiptop|mini|mobi|palm|phone|pie|tablet|up\.browser|up\.link|webos|wos/i]]>
                </mobile_useragent_regex>

                <evaluation_api>
                    <error_as_warning>0</error_as_warning>

                    <redirect>
                        <enable_confirmation>0</enable_confirmation>
                        <confirmation_message>You are about to be redirected to an external URL. Before proceeding, please grant your consent to continue.</confirmation_message>
                        <enable_notification>0</enable_notification>
                        <notification_message>You are about to be redirected to an external URL.</notification_message>
                        <dialog_visibility_duration>3000</dialog_visibility_duration>
                    </redirect>
                </evaluation_api>

                <shipping_billing_form>
                    <autosave_timeout>3000</autosave_timeout><!-- Deprecated -->
                </shipping_billing_form>

                <address_form>
                    <use_street_renderer>0</use_street_renderer>
                </address_form>

                <place_order>
                    <success_page_redirect_timeout>3000</success_page_redirect_timeout>
                </place_order>

                <fixes_workarounds>
                    <migrate_guest_info>1</migrate_guest_info>
                    <total_segments_collect_totals>1</total_segments_collect_totals>
                    <render_billing_address>0</render_billing_address>
                    <disable_form_auto_saving>0</disable_form_auto_saving>
                </fixes_workarounds>

                <experimental>
                    <enable_first_payment_method_available>0</enable_first_payment_method_available>
                    <enable_first_shipping_method_available>0</enable_first_shipping_method_available>
                    <disable_main_evaluation_result_merge>1</disable_main_evaluation_result_merge>
