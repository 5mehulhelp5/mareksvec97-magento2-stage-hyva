use Hyva\Theme\ViewModel\HyvaCsp;

/** @var HyvaCsp $hyvaCsp */
?>
<script>
    function hyvaCheckoutTermsAndConditions() {
        return hyva.createBooleanObject('visible', false, {
            element: this.$el,
            hasError: false,

            updateErrorMessage() {
                this.hasError = ('terms' in this.$event.detail) && this.$event.detail.terms.includes(this.element.dataset.agreementId)
            },
            acceptTerms() {
                this.setVisibleFalse()
                this.$wire.set('termAcceptance.' + this.element.dataset.agreementId, true)
            },
            denyTerms() {
                this.setVisibleFalse()
                this.$wire.set('termAcceptance.' + this.element.dataset.agreementId, false)
            },
            updateErrorIfNotAccepted() {
                this.hasError = this.hasError && ! this.$event.target.checked
            },
            errorClasses() {
                return {
                    'text-red-600': this.hasError,
                    'text-slate-700': !this.hasError
                }
            }
        })
    }

    window.addEventListener('alpine:init', () => {
        Alpine.data('hyvaCheckoutTermsAndConditions', hyvaCheckoutTermsAndConditions)
    }, { once: true })
</script>
<?php $hyvaCsp->registerInlineScript() ?>
