<script>
    function hyvaCheckoutPasswordVisibility() {
        return hyva.createBooleanObject('visible', false, {
            textOrPassword() {return this.visible() ? 'text' : 'password'},
            ariaLabel() {
                return this.visible()
                    ? '<?= $escaper->escapeJs(__('Hide Password')) ?>'
                    : '<?= $escaper->escapeJs(__('Show Password')) ?>'
            }
        })
    }

    window.addEventListener('alpine:init', () => {
        Alpine.data('hyvaCheckoutPasswordVisibility', hyvaCheckoutPasswordVisibility)
    }, { once: true })
</script>
