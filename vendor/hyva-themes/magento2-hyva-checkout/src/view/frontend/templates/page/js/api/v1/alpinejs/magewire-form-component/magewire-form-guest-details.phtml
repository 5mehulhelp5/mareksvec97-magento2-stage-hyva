<script>
    function initMagewireFormForGuestDetails() {
        const wire = this.$wire;
        return Object.assign(
            initMagewireForm.call(this),
            {
                customerExists: wire.entangle('customerExists'),
                login() {
                    if (!this.customerExists) return;

                    this.validate().then(() => wire.trigger('login')).catch(() => {})
                }
            }
        )
    }
    window.addEventListener('alpine:init', () => Alpine.data('initMagewireFormForGuestDetails', initMagewireFormForGuestDetails), {once: true})
</script>
<?php $hyvaCsp->registerInlineScript() ?>
