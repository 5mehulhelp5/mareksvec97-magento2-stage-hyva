<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <!-- Make Hyvä modals globally available on all checkout steps -->
    <update handle="hyva_modal"/>
    <!-- Make Hyvä advanced form validation available on all checkout steps -->
    <update handle="hyva_form_validation"/>

    <body>
        <referenceContainer name="after.body.start">
            <block name="magewire-form-validation"
                   after="advanced-form-validation"
                   template="Hyva_Checkout::page/js/checkout-form-validation.phtml"
            />

            <block name="magewire-form-telephone-validation"
                   after="advanced-form-validation"
                   template="Hyva_Checkout::page/js/checkout-form-telephone-validation.phtml"
            />
        </referenceContainer>

        <referenceContainer name="magewire.plugin.scripts">
            <block name="hyva-checkout.page.js.magewire.plugin.error"
                   after="magewire.plugin.error"
                   template="Hyva_Checkout::page/js/magewire/plugin/error.phtml"
            />
        </referenceContainer>
    </body>
</page>
