<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <move element="checkout.guest-details.section" destination="column.main" before="-"/>
        <move element="checkout.shipping-details.section" destination="column.main" after="checkout.guest-details.section"/>
        <move element="checkout.shipping.section" destination="column.main" after="checkout.shipping-details.section"/>

        <!-- Remove the shipping summary for the "shipping" step -->
        <referenceBlock name="checkout.shipping-summary" remove="true"/>
    </body>
</page>
