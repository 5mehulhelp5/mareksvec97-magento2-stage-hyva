<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <move element="checkout.billing-details.section" destination="column.main"/>
        <move element="checkout.payment.section" destination="column.main" before="checkout.section.quote-actions"/>

        <!-- Move the quote actions into the main column when on step payment (TODO: disabled) -->
        <move element="checkout.section.quote-actions" destination="column.main"/>
        <!-- Move the order comment component into the summary container when on step payment. -->
        <move element="checkout.order-comment" destination="checkout.price-summary.section" after="-"/>
    </body>
</page>
