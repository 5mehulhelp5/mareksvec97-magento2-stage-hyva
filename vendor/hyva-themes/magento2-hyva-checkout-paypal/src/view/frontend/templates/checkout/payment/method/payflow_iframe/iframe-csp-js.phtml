use Magento\Framework\Escaper;
use Magento\Framework\View\Element\Template;

/** @var Template $block */
/** @var Escaper $escaper */
/** @var ViewModelRegistry $viewModels */
/** @var HyvaCsp $hyvaCsp */

?>
<script>
function PaymentMethodPayflowIframe() {
    return {
        init() {
            const { methodCode } = this.$el.dataset;
            const iframe = document.getElementById(`${methodCode}`);

            let iframeIsLoaded = false;

            document.addEventListener('click', iframe.stopEventPropagation, true);

            iframe.addEventListener('load', () => {
                if (iframeIsLoaded) {
                    iframe.contentWindow.location.reload();
                    document.removeEventListener('click', iframe.stopEventPropagation, true);
                }

                iframeIsLoaded = true;
            })
        }
    }
}

window.addEventListener('alpine:init', () => Alpine.data('PaymentMethodPayflowIframe', PaymentMethodPayflowIframe), {once: true});
</script>
