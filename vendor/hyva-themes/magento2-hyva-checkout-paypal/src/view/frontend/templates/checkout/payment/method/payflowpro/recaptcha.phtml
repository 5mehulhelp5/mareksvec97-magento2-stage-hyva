declare(strict_types=1);

use Hyva\CheckoutPayPal\Magewire\Payment\Method\Payflowpro;
use Hyva\CheckoutPayPal\ViewModel\Payment\PayflowproReCaptcha as ViewModel;
use Hyva\Theme\Model\ViewModelRegistry;
use Magento\Framework\Escaper;
use Magento\Framework\View\Element\Template;
use Magento\ReCaptchaUi\Model\CaptchaResponseResolverInterface as CaptchaResolver;

/** @var Escaper $escaper */
/** @var Template $block */
/** @var ViewModelRegistry $viewModels */
/** @var Payflowpro $magewire */
/** @var ViewModel $viewModel */

$viewModel = $viewModels->require(ViewModel::class);

$magewire = $block->getParentBlock()
    ->getParentBlock()
    ->getData('magewire');
$methodCode = $magewire->getMethodCode();

$formId = 'payflowpro-recaptcha';
$reCaptchaContainerId = $viewModel->getContainerId();
$reCaptchaV2InvisibleCallback = $viewModel->getV2InvisibleCallback();
?>
<div class="pp-recaptcha my-4">
    <?php if ($viewModel->isEnabled()): ?>
        <form x-data="initReCaptchaForm"
              x-on:payflowpro-validate-recaptcha.window="submitForm"
              id="<?= $escaper->escapeHtmlAttr($formId) ?>"
              data-recaptcha-resolver="<?= $escaper->escapeHtmlAttr(CaptchaResolver::PARAM_RECAPTCHA) ?>"
              data-method-code="<?= $escaper->escapeHtmlAttr($methodCode) ?>"
              data-site-key="<?= $escaper->escapeHtmlAttr($viewModel->getSiteKey()) ?>"
              data-recaptcha-v2-callback="<?= $escaper->escapeHtmlAttr($reCaptchaV2InvisibleCallback) ?>"
              data-container-id="<?= $escaper->escapeHtmlAttr($reCaptchaContainerId) ?>">
            <div><?= /** noEscape */ $viewModel->getReCaptchaInputHtml() ?></div>
            <div><?= /** noEscape */ $viewModel->getReCaptchaNoticeHtml() ?></div>
        </form>
    <?php endif; ?>
</div>
