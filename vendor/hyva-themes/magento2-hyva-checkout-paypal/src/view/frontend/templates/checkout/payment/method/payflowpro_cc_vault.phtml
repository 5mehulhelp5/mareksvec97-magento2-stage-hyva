declare(strict_types=1);

use Hyva\CheckoutPayPal\Magewire\Payment\Method\PayflowproCcVault;
use Magento\Framework\Escaper;
use Magento\Framework\View\Element\Template;
use Magento\Paypal\Block\Payflow\Customer\CardRenderer;

/** @var Escaper $escaper */
/** @var Template $block */
/** @var CardRenderer $storePaymentRenderer */
/** @var PayflowproCcVault $magewire */

$magewire = $block->getData('magewire');
$methodCode = $magewire->getMethodCode();

$storePayments = $magewire->getStorePayments();
$storePaymentRenderer = $block->getChildBlock('stored_payment_renderer');
// phpcs:disable Generic.Files.LineLength.TooLong
?>

<div id="paypal-button-<?= $escaper->escapeHtmlAttr($methodCode) ?>" class="relative z-10">
    <div class="pp-stored-cards flex flex-wrap gap-5">

        <?php foreach ($storePayments as $storedPayment): ?>
            <label for="stored-payment-<?=  $escaper->escapeHtmlAttr($storedPayment->getEntityId()) ?>">
                <input type="radio"
                       wire:model="storedPaymentId"
                       id="stored-payment-<?=  $escaper->escapeHtmlAttr($storedPayment->getEntityId()) ?>"
                       name="stored-payment"
                       value="<?=  $escaper->escapeHtmlAttr($storedPayment->getEntityId()) ?>">

                <?= /** noEscapse */ $storePaymentRenderer->render($storedPayment) ?>
            </label>
        <?php endforeach; ?>

    </div>
</div>
