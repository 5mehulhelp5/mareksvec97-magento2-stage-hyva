<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="product_blacklist" translate="label" type="text" sortOrder="900" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Product Blacklist Settings</label>
            <tab>general</tab>
            <resource>MetaloPro_ProductBlacklist::config</resource>
            <group id="settings" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Blacklist Configuration</label>
                <field id="blacklisted_products" translate="label" type="textarea" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Blacklisted Products (SKUs)</label>
                    <comment>Enter SKUs of products to blacklist, separated by commas.</comment>
                </field>
                <field id="blacklisted_websites" translate="label" type="textarea" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Blacklisted Websites</label>
                    <comment>Enter website codes to blacklist, separated by commas.</comment>
                </field>
            </group>
        </section>
    </system>
</config>
