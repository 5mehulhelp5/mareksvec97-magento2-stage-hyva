<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="metalio" translate="label" sortOrder="900" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Metalio</label>
            <tab>general</tab>
            <resource>Magento_Config::config</resource>

            <group id="header_links" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Header Links</label>

                <field id="enabled" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="links" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Custom links (right side)</label>
                    <frontend_model>Metalio\HeaderLinks\Block\Adminhtml\System\Config\Form\Field\Links</frontend_model>
                    <backend_model>Magento\Config\Model\Config\Backend\Serialized\ArraySerialized</backend_model>
                    <comment>Add rows with Label + URL/Path + Sort + New tab + CSS class.</comment>
                </field>
            </group>
        </section>
    </system>
</config>
