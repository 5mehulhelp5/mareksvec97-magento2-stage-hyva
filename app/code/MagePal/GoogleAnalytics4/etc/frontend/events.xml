<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="checkout_cart_update_items_after">
        <observer name="magepal_googleanalytics4_checkout_cart_update_items_after"
                  instance="MagePal\GoogleAnalytics4\Observer\Frontend\CheckoutCartUpdateItemsAfterObserver" />
    </event>
    <event name="checkout_cart_update_item_complete">
        <observer name="magepal_googleanalytics4_checkout_cart_update_item_complete"
                  instance="MagePal\GoogleAnalytics4\Observer\Frontend\CheckoutCartUpdateItemCompleteObserver" />
    </event>
    <event name="sales_quote_product_add_after">
        <observer name="magepal_googleanalytics4_checkout_cart_add_product_complete"
                  instance="MagePal\GoogleAnalytics4\Observer\Frontend\SalesQuoteProductAddAfterObserver" />
    </event>
    <event name="sales_quote_remove_item">
        <observer name="magepal_googleanalytics4_sales_quote_remove_item"
                  instance="MagePal\GoogleAnalytics4\Observer\Frontend\SalesQuoteRemoveItemObserver" />
    </event>
</config>
