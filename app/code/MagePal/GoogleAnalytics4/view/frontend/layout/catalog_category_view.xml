<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="before.body.end">
            <block class="MagePal\GoogleAnalytics4\Block\Data\Category" name="magepal_ga4_block_category">
                <arguments>
                    <argument name="item_list_name" xsi:type="string">catalog</argument>
                    <argument name="block_name" xsi:type="string">category.products.list</argument>
                    <argument name="show_category" xsi:type="boolean">true</argument>
                </arguments>
            </block>
            <block class="MagePal\GoogleAnalytics4\Block\JsComponent" template="MagePal_GoogleAnalytics4::js-component.phtml">
                <arguments>
                    <argument name="component_name" xsi:type="string">addToCartGa4DataLayer</argument>
                </arguments>
            </block>
            <block class="MagePal\GoogleAnalytics4\Block\Data\CatalogWidget" name="catalogwidget_ga4_products_impression">
                <arguments>
                    <argument name="item_list_name" xsi:type="string">Catalog Widget Items</argument>
                    <argument name="show_category" xsi:type="boolean">false</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
