<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="before.body.end">
            <block class="MagePal\GoogleAnalytics4\Block\Data\EnhancedSuccessPage" name="magepal_ga4_block_product">
                <arguments>
                    <argument name="show_category" xsi:type="boolean">false</argument>
                </arguments>
            </block>
            <block class="MagePal\GoogleAnalytics4\Block\JsComponent" template="MagePal_GoogleAnalytics4::js-component.phtml">
                <arguments>
                    <argument name="component_name" xsi:type="string">addToCartGa4DataLayer</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
