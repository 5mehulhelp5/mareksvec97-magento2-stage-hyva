<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="bigconnect_inspiration" resource="default" engine="innodb" comment="BigConnect Inspirations">
        <column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Entity ID"/>
        <column xsi:type="int" name="product_id" padding="10" unsigned="true" nullable="false" comment="Product ID"/>
        <column xsi:type="smallint" name="store_id" unsigned="true" nullable="false" default="0" comment="Store ID"/>
        <column xsi:type="varchar" name="image" length="255" nullable="false" comment="Image Path"/>
        <column xsi:type="varchar" name="customer_name" length="255" nullable="false" comment="Customer Name"/>
        <column xsi:type="varchar" name="location" length="255" nullable="true" comment="Location"/>
        <column xsi:type="varchar" name="country_code" length="10" nullable="true" comment="Country Code"/>
        <column xsi:type="tinyint" name="rating" unsigned="true" nullable="false" default="5" comment="Rating"/>
        <column xsi:type="text" name="review" nullable="true" comment="Review"/>
        <column xsi:type="varchar" name="status" length="20" nullable="false" default="approved" comment="Status"/>
        <column xsi:type="int" name="position" padding="10" nullable="false" default="0" comment="Position"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="true" comment="Updated At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <index referenceId="BIGCONNECT_INSPIRATION_PRODUCT_ID" indexType="btree">
            <column name="product_id"/>
        </index>
        <index referenceId="BIGCONNECT_INSPIRATION_STORE_ID" indexType="btree">
            <column name="store_id"/>
        </index>
        <index referenceId="BIGCONNECT_INSPIRATION_STATUS" indexType="btree">
            <column name="status"/>
        </index>
        <index referenceId="BIGCONNECT_INSPIRATION_POSITION" indexType="btree">
            <column name="position"/>
        </index>
    </table>
</schema>
