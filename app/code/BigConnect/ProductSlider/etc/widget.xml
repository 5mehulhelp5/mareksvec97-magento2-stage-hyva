<?xml version="1.0"?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:framework:Widget/etc/widget.xsd">

    <widget id="bigconnect_product_slider" class="BigConnect\ProductSlider\Block\Widget\ProductSlider">
        <label translate="true">BigConnect: Product Slider</label>
        <description translate="true">Product slider with configurable sources (bestsellers, new, sale, etc.)</description>

        <parameters>
            <parameter name="source_code" xsi:type="select" required="true" visible="true">
                <label translate="true">Source</label>
                <options>
                    <option name="bestsellers" value="bestsellers" selected="true">
                        <label translate="true">Bestsellers</label>
                    </option>
                </options>
            </parameter>

            <parameter name="title_badge" xsi:type="text" visible="true">
                <label translate="true">Title badge</label>
                <value>Najpredávanejšie produkty</value>
            </parameter>

            <parameter name="title" xsi:type="text" visible="true">
                <label translate="true">Title</label>
                <value>Obľúbené u našich zákazníkov</value>
            </parameter>

            <parameter name="subtitle" xsi:type="text" visible="true">
                <label translate="true">Subtitle</label>
                <value>Produkty s najvyšším hodnotením a tisíckami spokojných zákazníkov</value>
            </parameter>

            <parameter name="page_size" xsi:type="text" visible="true">
                <label translate="true">Page size</label>
                <value>8</value>
            </parameter>

            <parameter name="period_days" xsi:type="text" visible="true">
                <label translate="true">Period (days)</label>
                <value>30</value>
            </parameter>

            <parameter name="only_in_stock" xsi:type="select" visible="true">
                <label translate="true">Only in stock</label>
                <options>
                    <option name="1" value="1" selected="true">
                        <label translate="true">Yes</label>
                    </option>
                    <option name="0" value="0">
                        <label translate="true">No</label>
                    </option>
                </options>
            </parameter>

            <parameter name="only_visible" xsi:type="select" visible="true">
                <label translate="true">Only visible</label>
                <options>
                    <option name="1" value="1" selected="true">
                        <label translate="true">Yes</label>
                    </option>
                    <option name="0" value="0">
                        <label translate="true">No</label>
                    </option>
                </options>
            </parameter>

            <parameter name="add_to_cart" xsi:type="select" visible="true">
                <label translate="true">Show Add to cart</label>
                <options>
                    <option name="1" value="1" selected="true">
                        <label translate="true">Yes</label>
                    </option>
                    <option name="0" value="0">
                        <label translate="true">No</label>
                    </option>
                </options>
            </parameter>

            <parameter name="show_wishlist" xsi:type="select" visible="true">
                <label translate="true">Show Wishlist</label>
                <options>
                    <option name="1" value="1">
                        <label translate="true">Yes</label>
                    </option>
                    <option name="0" value="0" selected="true">
                        <label translate="true">No</label>
                    </option>
                </options>
            </parameter>

            <parameter name="view_all_url" xsi:type="text" visible="true">
                <label translate="true">View all URL</label>
            </parameter>

            <parameter name="view_all_label" xsi:type="text" visible="true">
                <label translate="true">View all label</label>
                <value>Zobraziť všetky produkty</value>
            </parameter>

            <parameter name="accent_color" xsi:type="text" visible="true">
                <label translate="true">Accent color</label>
                <value>#7e9b84</value>
            </parameter>
        </parameters>
    </widget>

</widgets>
