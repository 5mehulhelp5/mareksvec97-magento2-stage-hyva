declare(strict_types=1);

use Hyva\Checkout\Model\MethodMetaDataInterface;
use Hyva\Theme\Model\ViewModelRegistry;
use Hyva\Checkout\ViewModel\Checkout\Payment\MethodList as ViewModel;
use Hyva\Checkout\Magewire\Checkout\Payment\MethodList as Magewire;
use Magento\Framework\Escaper;
use Magento\Framework\View\Element\Template;
use Magento\Quote\Api\Data\PaymentMethodInterface;


/** @var Template $block */
/** @var ViewModelRegistry $viewModels */
/** @var ViewModel $viewModel */
/** @var PaymentMethodInterface $method */
/** @var Magewire $magewire */
/** @var Escaper $escaper */
/** @var MethodMetaDataInterface $methodMetaData */

$viewModel = $viewModels->require(ViewModel::class);
$methods = $viewModel->getList();
/** @var \Hyva\PaymentIcons\ViewModel\PaymentIcons $paymentIcons */
$paymentIcons = $viewModels->require(\Hyva\PaymentIcons\ViewModel\PaymentIconsLight::class);

// rozmery/klasy si pokojne uprav
$w = 44;  // šírka
$h = 32;  // výška

$iconByMethod = [
    // PayPal
    'paypal_express' => fn() => $paymentIcons->paypal2Html('h-8', 44, $h),
    'paypal'         => fn() => $paymentIcons->paypal2Html('h-8', 44, $h),

    // Klarna (prispôsob svojim kódom metódy)
    'klarna_paynow'  => fn() => $paymentIcons->klarnaHtml('h-6', $w, $h),
    'klarna_paylater'=> fn() => $paymentIcons->klarnaHtml('h-6', $w, $h),

    // Stripe – karta: ukážka viacerých ikon vedľa seba
    // Stripe cards – ukážka viacerých ikon vedľa seba
    'stripe_payments' => fn() =>
        '<div class="flex items-center gap-1">'
        . $paymentIcons->visaHtml('', 48, 24)
        . $paymentIcons->mastercardHtml('', 48, 24)
        . $paymentIcons->americanExpressHtml('', 48, 24)
        . '</div>',
    // Cash on Delivery
        'cashondelivery' => fn() => $paymentIcons->paymentOnDeliveryHtml('h-8', $w, $h),
    // Bank transfer / Internet banking
        'banktransfer' => fn() => 
            '<div class="flex items-center gap-2">'
            . $paymentIcons->sofortHtml('', $w, $h)
            . $paymentIcons->sepaHtml('', $w, $h)
            . '</div>',  
];
?>
<div id="payment-methods">
    <?php if ($methods): ?>
        <div
            id="payment-method-list"
            class="space-y-2"
            data-method="<?= $escaper->escapeHtmlAttr($magewire->method) ?>">
            <?php foreach ($methods as $method): ?>
                <?php $methodCodeAttr = $escaper->escapeHtmlAttr($method->getCode()) ?>
                <?php $methodMetaData = $viewModel->getMethodMetaData($block, $method) ?>

                <div
                    id="payment-method-option-<?= /* @noEscape */ $methodCodeAttr ?>"
                    class="border-2 rounded-md <?= $magewire->method === $method->getCode() ? 'active bg-primary bg-opacity-10 border-primary' : 'inactive bg-white' ?>"
                    wire:key="<?= /* @noEscape */ $methodCodeAttr ?>"
                >
                    <label class="flex gap-x-2.5 mb-0 p-4 cursor-pointer">
                        <div>
                            <input
                                type="radio"
                                class="form-radio relative top-0.5"
                                id="payment-method-<?= /* @noEscape */ $methodCodeAttr ?>"
                                name="payment-method-option"
                                value="<?= /* @noEscape */ $methodCodeAttr ?>"
                                wire:model="method"
                            />
                        </div>

                        <span class="flex flex-1 flex-wrap justify-between gap-x-4 gap-y-2">
                            <span class="text-gray-700 font-bold flex flex-col break-words hyphens-auto leading-loose">
                                <?= $escaper->escapeHtml($method->getTitle()) ?>

                                <?php if ($methodMetaData->hasSubTitle()): ?>
                                    <span class="text-gray-700 font-bold break-words hyphens-auto">
                                        <?= $escaper->escapeHtml($methodMetaData->getSubTitle()) ?>
                                    </span>
                                <?php endif ?>
                            </span>

                            <?php
                            $code = $method->getCode();
                            if ($methodMetaData->canRenderIcon() && ($iconHtml = $methodMetaData->renderIcon())): ?>
                                <div><?= /* @noEscape */ $iconHtml ?></div>
                            <?php elseif (isset($iconByMethod[$code])): ?>
                                <div><?= /* @noEscape */ $iconByMethod[$code]() ?></div>
                            <?php endif; ?>
                        </span>
                    </label>
                    <?php if ($viewModel->canShowMethod($block, $method, $magewire->method)): ?>
                        <?php $html = $viewModel->getMethodBlock($block, $method)->toHtml() ?>

                        <?php if (! empty($html)): ?>
                            <div id="<?= 'payment-method-view-' . /* @noEscape */ $methodCodeAttr ?>" class="p-4 pt-0">
                                <?= /* @noEscape */ $html ?>
                            </div>
                        <?php endif ?>
                    <?php endif ?>
                </div>
            <?php endforeach ?>
        </div>
    <?php else: ?>
        <div class="message warning">
            <?= $escaper->escapeHtml(__('No Payment method available.')) ?>
        </div>
    <?php endif ?>
</div>
