<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="hyva_product_slider" />
    <body>
        <referenceContainer name="content">
            <block
            	class="Magento\Framework\View\Element\Template"
                name="hero"
                template="Magento_Theme::homepage/hero.phtml"    
            />
            <block
                name="store.benefits.homepage"
                template="Magento_Theme::elements/store-benefits.phtml"
            />
            <block
                name="categories.homepage"
                template="Magento_Theme::elements/homepage-categories.phtml"
            />
            <block
                name="about.section"
                template="Magento_Theme::elements/about-section.phtml"
            />
            <block class="BigConnect\ProductSlider\Block\Widget\ProductSlider"
                   name="bigconnect.product.slider"
                   template="BigConnect_ProductSlider::widget/product-slider.phtml">
                            <arguments>
                                <argument name="source_code" xsi:type="string">bestsellers</argument>
                                <argument name="title_badge" xsi:type="string">Najpredávanejšie produkty</argument>
                                <argument name="title" xsi:type="string">Obľúbené u našich zákazníkov</argument>
                                <argument name="subtitle" xsi:type="string">Produkty s najvyšším hodnotením a tisíckami spokojných zákazníkov</argument>
                                <argument name="page_size" xsi:type="number">24</argument>
                                <argument name="period_days" xsi:type="number">360</argument>
                                <argument name="only_in_stock" xsi:type="boolean">false</argument>
                                <argument name="only_visible" xsi:type="boolean">true</argument>
                                <argument name="add_to_cart" xsi:type="boolean">true</argument>
                                <argument name="show_wishlist" xsi:type="boolean">false</argument>
                                <argument name="view_all_url" xsi:type="string"></argument>
                                <argument name="view_all_label" xsi:type="string">Zobraziť všetky produkty</argument>
                                <argument name="accent_color" xsi:type="string">#7e9b84</argument>
                            </arguments>
             </block>

        </referenceContainer>
        <referenceBlock name="page.main.title" remove="true"/>
        <referenceBlock name="content-1" remove="true"/>
        <referenceBlock name="store-benefits" remove="true"/>
    </body>
</page>
