declare(strict_types=1);

use Magento\Framework\Escaper;
use Magento\Theme\Block\Html\Title;

/** @var Escaper $escaper */
/** @var Title $block */

// Ak Magento/Hyvä pošle vlastnú css class (napr. z layoutu), tak ju rešpektuj.
// Inak použi rozumné responzívne veľkosti: mobile menšie, desktop väčšie.
$defaultTextSizeCssClass = ' text-2xl md:text-3xl lg:text-4xl';
$textSizeCssClass = $block->getCssClass()
    ? ' ' . $block->getCssClass()
    : $defaultTextSizeCssClass;

// jemnejší spacing na mobile, pôvodné nechávanie logiky pre purge
$titleContainerClasses = $block->getData('maybe_purged_tailwind_section_classes')
    ?? 'container flex flex-col md:flex-row flex-wrap my-4 md:my-6 font-bold lg:mt-8';

$titleHtml = '';
if (trim((string) $block->getPageHeading())) {
    $titleHtml = '<span class="base" data-ui-id="page-title-wrapper" '
        . $block->getAddBaseAttribute()
        . '>'
        . $escaper->escapeHtml($block->getPageHeading())
        . '</span>';
}
?>
<?php if ($titleHtml): ?>
    <div class="<?= $escaper->escapeHtmlAttr($titleContainerClasses . $textSizeCssClass) ?>">
        <h1
            class="text-gray-900 page-title title-font leading-tight tracking-tight"
            <?php if ($block->getId()): ?>id="<?= $escaper->escapeHtmlAttr($block->getId()) ?>"<?php endif; ?>
        >
            <?= /* @noEscape */ $titleHtml ?>
        </h1>

        <?= $block->getChildHtml() ?>
    </div>
<?php endif; ?>
