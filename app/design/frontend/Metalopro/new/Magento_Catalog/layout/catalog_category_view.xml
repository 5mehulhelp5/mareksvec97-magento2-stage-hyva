<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="category.view.container">
            <referenceBlock name="category.description" template="Magento_PageBuilder::catalog/category/view/description.phtml"/>
        </referenceContainer>
        
        <referenceBlock name="category.image" remove="true"/>
        
        <referenceContainer name="content">
            <container name="category.top" htmlTag="div" htmlClass="category-top" before="-">
                <!-- Môžete tu pridať ďalší obsah alebo bloky -->
            </container>

            
            
            
            
            

            <container name="category.bottom" htmlTag="div" htmlClass="category-bottom" after="-">
            <!-- Uistite sa, že všetky kontajnery a bloky sú správne uzavreté a usporiadané -->
                <container name="category.custom.production" htmlTag="div" htmlClass="custom-production-category" before="category.description">
                    <block class="Magento\Cms\Block\Block" name="category-custom-production">
                        <arguments>
                            <argument name="block_id" xsi:type="string">custom_production_category</argument>
                        </arguments>
                    </block>
                </container>
                <container name="category.benefits" htmlTag="div" htmlClass="category-benefits" after="category.top">
                    <block class="Magento\Cms\Block\Block" name="category-benefits">
                        <arguments>
                            <argument name="block_id" xsi:type="string">homepage_benefits</argument>
                        </arguments>
                    </block>
                </container>
                <container name="category.logos" htmlTag="div" htmlClass="category-logos" after="category.benefits">
                    <!-- Sem pridajte bloky alebo kontajnery, ktoré majú byť zahrnuté do tohto divu -->
                </container>
            </container>

        </referenceContainer>

        <move element="page.main.title" destination="category.top" before="-"/>    
        <move element="category.description" destination="category.top" after="page.main.title"/>
        <referenceBlock name="catalog.leftnav" remove="true"/>
    </body>
</page>
