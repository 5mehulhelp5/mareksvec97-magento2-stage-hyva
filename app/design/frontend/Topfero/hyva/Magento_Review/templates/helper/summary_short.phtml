<?php
declare(strict_types=1);

use Hyva\Theme\ViewModel\HyvaCsp;
use Hyva\Theme\Model\ViewModelRegistry;
use Magento\Framework\Escaper;
use Magento\Review\Block\Product\ReviewRenderer;

/** @var ReviewRenderer $block */
/** @var Escaper $escaper */
/** @var ViewModelRegistry $viewModels */
/** @var HyvaCsp $hyvaCsp */

$ratingPercent = (float) $block->getRatingSummary(); // 0..100
$reviewCount   = (int) $block->getReviewsCount();

$ratingSteps = 5;
$ratingValue = $ratingPercent > 0 ? ($ratingPercent / 100) * $ratingSteps : 0.0; // 0..5

$filledStars = (int) floor($ratingValue);
$emptyStars  = $ratingSteps - $filledStars;

// zobraz ako (5) alebo (4.5) bez zbytoÄnej .0
$ratingLabel = rtrim(rtrim(number_format($ratingValue, 1, '.', ''), '0'), '.');

$productName = (string) $block->getProduct()->getName();
$url = $block->getReviewsUrl() . '#reviews';
?>

<?php if ($block->isReviewEnabled() && $reviewCount > 0): ?>
    <a
        href="<?= $escaper->escapeUrl($url) ?>"
        class="flex items-center gap-1 mb-3"
        aria-label="<?= $escaper->escapeHtmlAttr(__('%1 rating %2 out of 5', $productName, $ratingLabel)) ?>"
    >
        <span class="flex items-center gap-1">
            <?php for ($i = 0; $i < $filledStars; $i++): ?>
                <!-- filled star -->
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"
                     class="w-4 h-4 fill-yellow-400 text-yellow-400" aria-hidden="true">
                    <path d="M11.525 2.295a.53.53 0 0 1 .95 0l2.31 4.679a2.123 2.123 0 0 0 1.595 1.16l5.166.756a.53.53 0 0 1 .294.904l-3.736 3.638a2.123 2.123 0 0 0-.611 1.878l.882 5.14a.53.53 0 0 1-.771.56l-4.618-2.428a2.122 2.122 0 0 0-1.973 0L6.396 21.01a.53.53 0 0 1-.77-.56l.881-5.139a2.122 2.122 0 0 0-.611-1.879L2.16 9.795a.53.53 0 0 1 .294-.906l5.165-.755a2.122 2.122 0 0 0 1.597-1.16z"></path>
                </svg>
            <?php endfor; ?>

            <?php for ($i = 0; $i < $emptyStars; $i++): ?>
                <!-- empty star -->
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"
                     class="w-4 h-4 text-gray-300" fill="none" stroke="currentColor"
                     stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                    <path d="M11.525 2.295a.53.53 0 0 1 .95 0l2.31 4.679a2.123 2.123 0 0 0 1.595 1.16l5.166.756a.53.53 0 0 1 .294.904l-3.736 3.638a2.123 2.123 0 0 0-.611 1.878l.882 5.14a.53.53 0 0 1-.771.56l-4.618-2.428a2.122 2.122 0 0 0-1.973 0L6.396 21.01a.53.53 0 0 1-.77-.56l.881-5.139a2.122 2.122 0 0 0-.611-1.879L2.16 9.795a.53.53 0 0 1 .294-.906l5.165-.755a2.122 2.122 0 0 0 1.597-1.16z"></path>
                </svg>
            <?php endfor; ?>
        </span>

        <span class="text-xs text-gray-500 ml-1">(<?= $escaper->escapeHtml($ratingLabel) ?>)</span>
    </a>
<?php endif; ?>
