<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="category.image" remove="true"/>
    	<referenceBlock name="catalog.leftnav" remove="true"/>
    	<referenceContainer name="content">
            <block class="Magento\Catalog\Block\Category\View" name="bottom.description" template="BigConnect_CategoryDescription::product/list/bottom_description.phtml" before="cart.benefits"/>
    	            <block class="Magento\Framework\View\Element\Template" name="cart.benefits" after="-">
                        <arguments>
                            <argument name="template" xsi:type="string">Magento_Checkout::cart/cart-benefits.phtml</argument>
                        </arguments>
        </block>


    	        </referenceContainer>
    </body>
</page>
